# =============================================================================
# Legal AI SaaS - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# The base URL of your application (required)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Application name displayed in UI
NEXT_PUBLIC_APP_NAME="Legal AI SaaS"
# Node environment (development|production|test)
NODE_ENV=development

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# NextAuth configuration (required for authentication)
NEXTAUTH_URL=http://localhost:3000
# NextAuth secret key (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here
# JWT secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here
# Encryption key for sensitive data (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-encryption-key-here
# CRON secret for scheduled tasks (generate with: openssl rand -base64 32)
CRON_SECRET=your-cron-secret-here

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Database connection URL (PostgreSQL, MySQL, SQLite supported)
DATABASE_URL="your-database-url-here"

# -----------------------------------------------------------------------------
# Payment Processing (Stripe)
# -----------------------------------------------------------------------------
# Stripe publishable key (starts with pk_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
# Stripe secret key (starts with sk_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# Stripe webhook secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# -----------------------------------------------------------------------------
# AI Services Configuration
# -----------------------------------------------------------------------------
# Claude API key from Anthropic
CLAUDE_API_KEY=your-claude-api-key-here
# OpenAI API key
OPENAI_API_KEY=your-openai-api-key-here
# Google Gemini API key
GEMINI_API_KEY=your-gemini-api-key-here
# Perplexity API key
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# -----------------------------------------------------------------------------
# Claude API Configuration
# -----------------------------------------------------------------------------
# Claude model to use (claude-3-sonnet-20240229|claude-3-haiku-20240307)
CLAUDE_MODEL=claude-3-sonnet-20240229
# Maximum tokens per request
CLAUDE_MAX_TOKENS=4000
# Temperature for responses (0.0-1.0)
CLAUDE_TEMPERATURE=0.7
# Maximum retry attempts
CLAUDE_MAX_RETRIES=3
# Request timeout in milliseconds
CLAUDE_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Claude Cache Configuration
# -----------------------------------------------------------------------------
# Enable/disable caching (true|false)
CLAUDE_CACHE_ENABLED=true
# Default cache TTL in milliseconds (24 hours)
CLAUDE_CACHE_DEFAULT_TTL=86400000
# Maximum cache size in MB
CLAUDE_CACHE_MAX_SIZE_MB=100
# Compression threshold in bytes
CLAUDE_CACHE_COMPRESSION_THRESHOLD=1024
# Enable cache analytics (true|false)
CLAUDE_CACHE_ENABLE_ANALYTICS=true
# Warmup cache on startup (true|false)
CLAUDE_CACHE_WARMUP_ON_START=true

# -----------------------------------------------------------------------------
# Cache Alert Thresholds
# -----------------------------------------------------------------------------
# Low hit rate threshold (percentage)
CACHE_ALERT_LOW_HIT_RATE=60
# High response time threshold (milliseconds)
CACHE_ALERT_HIGH_RESPONSE_TIME=5000
# High error rate threshold (percentage)
CACHE_ALERT_HIGH_ERROR_RATE=5
# High cache size threshold (percentage)
CACHE_ALERT_HIGH_CACHE_SIZE=80

# -----------------------------------------------------------------------------
# Cache Management
# -----------------------------------------------------------------------------
# Enable automatic cache invalidation (true|false)
CACHE_INVALIDATION_ENABLED=true
# Auto cleanup interval in milliseconds (1 hour)
CACHE_AUTO_CLEANUP_INTERVAL=3600000
# Maximum metrics history entries
CACHE_MAX_METRICS_HISTORY=10000

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# SMTP server hostname
SMTP_HOST=smtp.gmail.com
# SMTP server port
SMTP_PORT=587
# SMTP username (email address)
SMTP_USER=your-email@gmail.com
# SMTP password (use app-specific password for Gmail)
SMTP_PASS=your-email-password
# SMTP secure connection (true for port 465, false for others)
SMTP_SECURE=false

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760
# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level (error|warn|info|debug)
LOG_LEVEL=info
# Log directory path
LOG_DIR=./logs

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable voice chat feature (true|false)
ENABLE_VOICE_CHAT=true
# Enable PDF analysis feature (true|false)
ENABLE_PDF_ANALYSIS=true
# Enable multi-language support (true|false)
ENABLE_MULTI_LANGUAGE=true
# Enable daily report emails (true|false)
ENABLE_DAILY_REPORTS=true

# -----------------------------------------------------------------------------
# External API Keys
# -----------------------------------------------------------------------------
# Legal database API key
LEGAL_DB_API_KEY=your-legal-db-api-key-here
# Compliance checking API key
COMPLIANCE_API_KEY=your-compliance-api-key-here

# -----------------------------------------------------------------------------
# Scheduled Tasks Configuration
# -----------------------------------------------------------------------------
# Time to send daily reports (HH:MM format)
DAILY_REPORT_TIME=09:00
# Timezone for scheduled tasks
TIMEZONE=UTC

# -----------------------------------------------------------------------------
# Deployment Configuration (Vercel)
# -----------------------------------------------------------------------------
# Vercel project ID (for deployment)
VERCEL_PROJECT_ID=your-vercel-project-id
# Vercel organization ID (for deployment)
VERCEL_ORG_ID=your-vercel-org-id
# Vercel access token (for deployment)
VERCEL_TOKEN=your-vercel-token

# -----------------------------------------------------------------------------
# Development/Testing Configuration
# -----------------------------------------------------------------------------
# Test user credentials (development only)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123
# Cypress record key (for E2E testing)
CYPRESS_RECORD_KEY=your-cypress-record-key

# -----------------------------------------------------------------------------
# Payment Testing Configuration
# -----------------------------------------------------------------------------
# Toss webhook secret (for Toss payment verification)
TOSS_WEBHOOK_SECRET=your-toss-webhook-secret
# Payment QA automation
QA_TEST_EMAILS=test1@legalai.com,test2@legalai.com,test3@legalai.com,test4@legalai.com
# Enable payment test mode (true|false)
PAYMENT_TEST_MODE=true

# -----------------------------------------------------------------------------
# Growth Email Configuration
# -----------------------------------------------------------------------------
# Admin email recipients for growth reports (comma-separated)
ADMIN_EMAILS=admin@example.com,developer@legalaisaas.com
# Growth email language (ko|en)
GROWTH_EMAIL_LANGUAGE=ko
# Enable growth email reports (true|false)
ENABLE_GROWTH_EMAILS=true

# -----------------------------------------------------------------------------
# SEO Cache Configuration
# -----------------------------------------------------------------------------
# SEO cache TTL in milliseconds (24 hours default)
SEO_CACHE_TTL=86400000
# Maximum SEO cache size in bytes (100MB default)
SEO_CACHE_MAX_SIZE=104857600
# SEO cache compression threshold in bytes
SEO_CACHE_COMPRESSION_THRESHOLD=1024
# Maximum SEO cache entries
SEO_CACHE_MAX_ENTRIES=10000
# Enable SEO cache analytics (true|false)
SEO_CACHE_ENABLE_ANALYTICS=true
# SEO cache warmup on startup (true|false)
SEO_CACHE_WARMUP_ON_START=false